<% if image %>
  <%= link_to product_image(@product, :itemprop => "image"), @product.images.first.attachment.url(:large), :class => "jqzoom fancybox zoom-image click-to-zoom'", :title => @product.name, :rel => 'gallery', :data => {:title => @product.name} %>
<% else %>
  <%= link_to product_image(@product, :itemprop => "image"), @product.images.first.attachment.url(:large), :class => "jqzoom fancybox zoom-image click-to-zoom'", :title => @product.name , :rel => 'gallery', :data => {:title => @product.name} %>
<% end %>
