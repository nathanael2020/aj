<div class="slider-wrapper theme-default product-slide">
  <div class="ribbon"></div>
  <div id="product_slider" class="nivoSlider">
    <% Spree::Product.where("spree_products.id != ?", @product.id).limit(5).each do |product| %>
    <%= link_to product_image(product, :itemprop => "image", :title => product.name ), product, :itemprop => 'url', :title => product.name %>
    <% end %>
  </div>
</div>
